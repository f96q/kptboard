= content_for :active, 'retrospectives'

.retrospective-list
  =link_to '+', new_retrospective_path, class: 'btn btn-primary'

  %table.table.table-sm
    %thead
      %tr
        %th Title
        %th
    %tbody
      - @retrospectives.each do |retrospective|
        %tr
          %td
            = link_to retrospective.title, retrospective_path(retrospective)
          %td
            = link_to 'edit', edit_retrospective_path(retrospective)
            = link_to 'destroy', retrospective_path(retrospective), method: :delete, data: {confirm: 'are you sure?'}
            = link_to 'export', export_retrospective_path(retrospective, format: 'txt')
