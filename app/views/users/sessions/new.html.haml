- content_for :active, 'sign_in'

.page-header
  %h2 Sign in

= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  .form-group.row
    %label.col-sm-2.form-control-label Email
    .col-sm-10
      = f.email_field :email, class: 'form-control form-control-sm', autofocus: true, placeholder: 'Email'

  .form-group.row
    %label.col-sm-2.form-control-label Password
    .col-sm-10
      = f.password_field :password, class: 'form-control form-control-sm', placeholder: 'Password'

  - if devise_mapping.rememberable?
    = f.check_box :remember_me
    Remember me

  .form-group.row
    .col-sm-offset-2.col-sm-10
      = f.submit 'Sign in', class: 'btn btn-primary js-sign-in'

= render "users/shared/links"
